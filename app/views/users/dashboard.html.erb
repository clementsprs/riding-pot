<div class="content">
  <div class="menu">
    <div class="d-flex justify-content-between my-2">
      <%= link_to 'Précédentes', dashboard_path(choice: 'past_rides'), class: (params[:choice] == "past_rides" ? "second-button" : "third-button") %>
      <%= link_to 'A venir', dashboard_path(choice: 'upcoming_rides'), class: (params[:choice] == "upcoming_rides" ? "second-button" : "third-button") %>
    </div>
  </div>
  
  <div class="box m-3">
    <h1><%= ride_status_text(params[:choice]) %></h1>
    <%= render 'shared/rides', rides: @rides, participations: @participations %>
  </div>
</div>

<%= link_to "Connecter compte Stravia", connect_strava_oauth_path, method: :patch %>
