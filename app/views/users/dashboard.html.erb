<div class="d-flex justify-content-between my-2">
  <%= link_to 'Précédentes', dashboard_path(choice: 'past_rides'), class:"third-button" %>
  <%= link_to 'A venir', dashboard_path, class:"second-button" %>
</div>

<div class="box m-3">
  <% if params[:choice] == 'past_rides' %>
    <h1>Mes sorties précédentes</h1>
    <%= render 'shared/past_rides' %>
  <% elsif params[:choice] == 'upcoming_rides' || '' %>
    <h1>Mes sorties à venir</h1>
    <%= render 'shared/upcoming_rides' %>
  <% end %>
</div>
