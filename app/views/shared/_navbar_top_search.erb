<div class='navbar-top'>
  <%= link_to "/", class: "img-logo-title" do %>
    <%= image_tag "Logo - Riding Pot.png" %>
  <% end %>
  <%= form_tag rides_path, class: "search-form-control",  method: :get do %>
      <%= text_field_tag :address,
        params[:address],
        class: "form-control string required",
        placeholder: "Adresse" %>
      <button name="button" type="submit" class="btn btn-flat">
        <i class="fas fa-search"></i>
      </button>
    <% end %>
</div>
