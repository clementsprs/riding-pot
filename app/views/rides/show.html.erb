
<div class="show-box">
  <%# MAP %>
  <div class="mapbox">
    <div class="d-flex justify-content-between">
      <p class='city-icon'><%= @ride.city %></p>
      <p class='geoloc-icon'> <i class="fas fa-map-marker-alt"></i> <%= @ride.elevation %> m</p>
    </div>
    <div style="width: 100%; height: 400px;"
      data-controller="mapbox"
      data-mapbox-markers-value="<%= @markers.to_json %>"
      data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
    <div class="relative-box">
      <%= button_to "Rejoindre", ride_participations_path(@ride), method: :post, class: "main-button" %>
    </div>
  </div>

  <%# INFOS RIDE %>
  <div class="show-box-info m-3">
    <div class="card-ride-info">
      <div class="date-time-icon d-flex justify-content-around">
        <div class="date">
          <i class="fas fa-calendar"></i>
          <p> <%= @ride.date.strftime("%d-%m-%Y") %> </p>
        </div>
        <div class="time">
          <i class="fas fa-clock"></i>
          <p> <%= @ride.starting_time.strftime("%k:%M") %> </p>
        </div>
      </div>
      <div class="address">
        <i class="fas fa-map-pin"></i>
        <p> <%= @ride.starting_point.capitalize %> </p>
      </div>
    </div>

    <%# DATA RIDE %>
    <div class="d-flex justify-content-between mb-3">
      <div class="distance icon">
        <i class="fas fa-route"></i>
        <p> <%= @ride.distance_ride %> km</p>
      </div>
      <div class="icon">
        <i class="fas fa-mountain"></i>
        <p> <%= @ride.elevation %> m</p>
      </div>
      <div class="icon">
        <i class="fas fa-tachometer-alt"></i>
        <p> <%= @ride.pace_max %> km/h</p>
      </div>
      <div class="icon">
        <i class="fas fa-users"></i>
        <p> <%= @ride.participations.count + 1%> </p>
      </div>
    </div>

    <%# PARTICIPANTS %>
    <div class="participants mb-3">
      <p>Participants</p>
      <div class="participants-avatar">
        <p> <%= cl_image_tag @ride.user.photo.key, class: "avatar avatar-host" %> </p>
        <% @ride.participations.each do |participation| %>
          <p> <%= cl_image_tag participation.user.photo.key, class: "avatar" %> </p>
        <% end %>
      </div>
    </div>

    <%# DESCRIPTION %>
    <div class="description-ride">
      <p> <%= @ride.description %> </p>
    </div>

  </div>

</div>
